<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/header %>
    <title>Edit Book</title>
</head>

<body>

    <% include partials/navigation %>

    <div class="container p-4">
        <form method="POST" action="/edit-entry/" class="card card-body">
            <input type="text" class="form-control" name="id" id="id" value="<%= id %>">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" id="title" value="<%= title %>" autofocus required>
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" name="author" id="author" value="<%= author %>" required>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" class="form-control" name="image" id="image" value=<%= image %> required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" class="form-control" id="description" rows="2" required><%= description %></textarea>
            </div>
            <input type="submit" value="Edit Book" class="btn btn-primary">
        </form>
    </div>
</body>

</html>